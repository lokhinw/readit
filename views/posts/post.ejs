<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">/r/<%= subreadit.name %></h1>
    <div class="row">
        <div class="col-xs-9">
            <div class="well">
                <h3 style="margin: 0; word-wrap: break-word;">
                    <a><%= post.title %></a>
                </h3>
                <p>submitted by
                    <a class="post-links" href="#">user</a>
                </p>
                <p style="word-wrap: break-word; padding-left: 15px;"><%= post.body %></p>
                <a class="post-links" href="#">comment</a>
                <a class="post-links" href="#">save</a>
                <a class="post-links" href="#">edit</a>
                <form style="display: inline;" id="delete-form" action="/r/<%= subreadit.name %>/<%= post._id %>?_method=DELETE" method="POST">
                      <a class="post-links" href="javascript:{}" onclick="document.getElementById('delete-form').submit();">delete</a>
                </form>
            </div>
            <div class="well" style="word-wrap: break-word;">
                <% post.comments.reverse().forEach(function(comment){ %>
                    <p style="margin: 0;"><a class="post-links" href="#">user</a></p>
                    <p style="margin: 0;"><%= comment.text %></p>
                    <div style="margin-bottom: 15px; font-size: 12px;">
                    <a class="post-links" href="#">edit</a>
                    <a class="post-links" href="#">delete</a>
                    </div>
                <% }); %>
            </div>
        </div>
        <div class="col-xs-3">
            <div class="well">
                <h4 class="text-center">/r/<%= subreadit.name %></h4>
                <p class="text-center"><%= subreadit.description %></p>
            </div>
            <div class="well">
                <input type="text" class="form-control text-center" placeholder="search">
            </div>
            <div class="well">
                <a class="btn btn-large btn-primary btn-block" href="/r/<%= subreadit.name %>/new">Submit a new text post</a>
                <a class="btn btn-large btn-primary btn-block" href="/r/new">Create your own subreadit</a>
            </div>
        </div>
    </div>

</div>

<% include ../partials/footer %>
